<!-- ConceptMap -->

<!ELEMENT ConceptMap		(MetaData,
                                 Background,
           			 BoundingBox,
				 MapSet?,
				 NeuronStyle*)>

<!-- END ConceptMap -->



<!ENTITY % MetaData PUBLIC "-//CID//DTD MetaData 1.0//EN" "MetaData.dtd">
%MetaData;



<!-- Background -->

<!ELEMENT Background		 EMPTY>
<!ATTLIST Background
	COLOR			 CDATA			"0">

<!-- END Background -->



<!-- BoundingBox -->

<!ELEMENT BoundingBox		 EMPTY>
<!ATTLIST BoundingBox
	WIDTH			 CDATA			#REQUIRED
	HEIGHT			 CDATA			#REQUIRED>

<!-- END BoundingBox -->



<!-- MapSet -->

<!ELEMENT MapSet		 EMPTY>
<!ATTLIST MapSet
	MAPSETURI		 CDATA			#REQUIRED>

<!-- END MapSet -->



<!-- NeuronStyle -->

<!ELEMENT NeuronStyle		(Visibility,
				 DetailedMap?,
				 Box,
				 RoleStyle*)>
<!ATTLIST NeuronStyle
	NEURONURI		 CDATA			#REQUIRED>



<!ELEMENT Visibility		 EMPTY>
<!ATTLIST Visibility
	STRENGTH		 CDATA			#REQUIRED>


<!ELEMENT DetailedMap		 EMPTY>
<!ATTLIST DetailedMap
	MAPURI			 CDATA			#REQUIRED>


<!ELEMENT Box			(BoundingBox,
				 Position,
				 Title,
				 DataTags?,
                                 Line?)>

<!ELEMENT Position       	 EMPTY>
<!ATTLIST Position
	X			 CDATA			#REQUIRED
	Y			 CDATA			#REQUIRED>


<!ELEMENT Title			(#PCDATA)>


<!ELEMENT DataTags		(DataTag*)>

<!ELEMENT DataTag		 EMPTY>
<!ATTLIST DataTag
	NAME			 CDATA			#REQUIRED>


<!ELEMENT RoleStyle		(Line)>
<!ATTLIST RoleStyle
	TYPE			 CDATA			#REQUIRED
	NEURONURI		 CDATA			#REQUIRED>

	
<!ELEMENT Line			(Position*)>


<!-- END NeuronStyle -->

